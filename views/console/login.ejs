<body class="back">
	<div class="shade"></div>
	<!-- <h3>管理端登录</h3> -->
	<form method="post" action="/console/login">
		
		<span class="sp">Hello,administer</span>
		<div class="container">
			<div class="di d1">
				<img src="/images/icon/icon_account.png"/> 
				<input type="text" name="account" id="account" placeholder="账户|USERNAME"/>
			</div>
			<div class="di d2">
				<img src="/images/icon/icon_psw.png"/> 
				<input type="password" name="password" id="password" placeholder="密码|PASSWORD"/>
			</div>
			<div class="di bot">
				<input type="button" value="登录" id="userLogin">
				<!-- <span>走你</span> -->
			</div>
		</div>


